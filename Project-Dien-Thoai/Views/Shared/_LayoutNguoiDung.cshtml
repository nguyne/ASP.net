<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Public/css/Trangchu.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @RenderSection("head", required: false)
</head>
<body>
    <section class="header clearfix">
            <div class="container py-2">
                <div class="row">
                    <div class="col-md-3 logo">
                        <img src="~/Public/img/logo 1.svg" alt="Logo" class="img-fluid" />
                    </div>
                    <div class="col-md-1 logo">
                    </div>
                    <div class="col-md-4">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success cong" type="submit">Search</button>
                        </form>
                    </div>
                    <div class="grup col-md-4">
                        <div class="cart">
                            <span class="cart-text">GIỎ HÀNG</span>
                            <div class="logo-cart-box"><div class="logo-cart">0</div></div>
                        </div>
                        <div class="dangnhap login">
                            @if (Session["User"].Equals(""))
                            {
                                <a id="users" class="dangki" href="@Url.Action("Index", "Authen")">
                                    <div>Đăng nhập</div>
                                </a>
                                <a id="users" class="dangki" href="@Url.Action("Index", "Logout")">
                                    <div>Đăng kí</div>
                                </a>
                            }
                            else
                            {
                                <a id="users" class="dangki" href="@Url.Action("thoat", "Authen")">
                                    <div>@Session["userName"]</div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <section class="main mainmenu clearfix bg-main">
                    <nav class="navbar navbar-expand-lg navbar-light py-3">
                        <div class="main container-fluid">
                            <a class="navbar-brand" href="#">Trang chủ</a>
                            <a class="navbar-brand" href="#">Điện thoại</a>
                            <a class="navbar-brand" href="#">Phụ kiện</a>
                            @if (Session["User"].Equals("Admin"))
                            {
                                <a class="navbar-brand" href="@Url.Action("","Admin")">Quản Lí</a>
                            }
                        </div>
                    </nav>
                </section>
            </div>
        </section>
    <section class="maincontent clearfix">
        <div>Phần sản phẩm</div>
        @RenderBody()
    </section>
    <section class="footer clearfix bf-footer py-4">
        <div class="container">
            <div class="d-grid footer-items">
                <div class="row ">
                    <div class="col-md-3">
                        <span class="text-light">ĐIỆN THOẠI</span>
                        <div class="text-light">
                            Nhóm điện thoại mới được phát triển, đứng đầu trong
                            chuỗi cữa hàng bán lẻ lớn nhất Việt Nam, Sẽ mang đến cho người dùng những trải
                            nghiệm tuyệt vời nhất
                        </div>
                    </div>
                    <div class="col-md-3">
                        <span class="text-light">SẢN PHẨM ĐÁNH GIÁ CAO</span>
                    </div>
                    <div class="col-md-3">
                        <span class="text-light">THÔNG TIN HƯỚNG DẪN</span>
                        <br />
                        <a class="Address" href="#">Giao hàng và thanh toán</a>
                        <br />
                        <a class="Address" href="#">Chế độ nhập hàng</a>
                        <br />
                        <a class="Address" href="#">Nhập hàng và đổi trả </a>
                        <br />
                        <a class="Address" href="#">Đập hộp và nhận quà</a>
                        <br />
                        <a class="Address" href="#">Chính sách bảo mật</a>
                    </div>
                    <div class="col-md-3">
                        <span class="text-light">ĐỊA CHỈ CỮA HÀNG</span>
                        <div class="text-light">Số 01 ,Hồ chí minh</div>
                        <div class="text-light">Số 02 ,Hà Nội</div>
                        <div class="text-light">Số 03 ,Quảng ngãi</div>
                        <div class="text-light">Số 04 ,Quy nhơn</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="copyright clearfix bf-footer py-2">
        <div class="container">
            <div class="row">
                <span class="duong border-top border-light"></span>
                <div class="col-md-6 text-light">
                    Bản quyền thuộc về NHÓM ĐIỆN THOẠI
                </div>
                <div class="col-md-6 text-light">

                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("footer", required: false)
</body>
</html>
